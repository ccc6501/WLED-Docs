datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Thread {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  threadId  String
  role      String
  content   String
  createdAt DateTime @default(now())
  Thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
}

model Note {
  id        String   @id @default(cuid())
  title     String
  body      String
  tags      String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id        String   @id @default(cuid())
  title     String
  status    String   @default("todo")
  projectId String?
  due       DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Project   Project? @relation(fields: [projectId], references: [id])
}

model Project {
  id        String   @id @default(cuid())
  name      String
  summary   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model DocMeta {
  id        String   @id @default(cuid())
  source    String
  chunkId   Int
  textHash  String
  createdAt DateTime @default(now())
}
